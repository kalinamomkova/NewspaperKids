@model NewspaperKids.Models.ViewModels.Comment.AddCommentViewModel
    @using (Html.BeginForm("ReturnForEdit", "Administration", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <hr />
        @Html.HiddenFor(m=>m.ArticleId)
        <div class="form-group">
            @Html.LabelFor(m => m.Content, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextAreaFor(m=>m.Content, new { @class = "form-control", placeholder="Моля въведете коментар"});
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-4 col-md-3">
                <input type="submit" class="btn btn-success" value="Върни за редакция" />
            </div>
        </div>
    }

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
