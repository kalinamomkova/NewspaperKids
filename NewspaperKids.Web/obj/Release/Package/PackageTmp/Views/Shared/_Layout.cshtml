@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
<div class="container-fluid">
    <div class="row">
        
        <div class="nav navbar-nav col-md-3">
            @if (User.IsInRole("Admin")|| User.IsInRole("Author"))
            {
                @Html.Partial("_LoginPartial")
            }
        </div>
        <div id="navbarMain" class="navbar navbar-inverse col-md-8">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div id="navContainer" class="navbar-collapse collapse">
                <ul id="navContent" class="nav navbar-nav">
                    <li>@Html.ActionLink("НAЧАЛО", "Index", "Home")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            ДЕТСКО ТВОРЧЕСТВО
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("СТИХОТВОРЕНИЯ", "Index", "Article", new { area = "", id = 2 }, null)</li>
                            <li>@Html.ActionLink("ПРИКАЗКИ", "Index", "Article", new { area = "", id = 3 }, null)</li>
                            <li>@Html.ActionLink("ГАТАНКИ", "Index", "Article", new { area = "", id = 4 }, null)</li>
                            <li>@Html.ActionLink("ЕСЕТА", "Index", "Article", new { area = "", id = 5 }, null)</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            РЕПОРТЕР
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("АНКЕТИ", "Index", "Article", new { area = "", id = 6 }, null)</li>
                            <li>@Html.ActionLink("ИНТЕРВЮТА", "Index", "Article", new { area = "", id = 7 }, null)</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            ИНТЕРЕСНО
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("ЗА ЛЮБОЗНАТЕЛНИТЕ", "Index", "Article", new { area = "", id = 8 }, null)</li>
                            <li>@Html.ActionLink("ЛАБИРИНТИ", "Index", "Article", new { area = "", id = 9 }, null)</li>
                            <li>@Html.ActionLink("ГЛАВОБЛЪСКАНИЦИ", "Index", "Article", new { area = "", id = 10 }, null)</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("МУЗИКА И СПОРТ", "Index", "Article", new { area = "", id = 11 }, null)</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            ЗАБАВА
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("ВИЦОВЕ И СМЕШКИ", "Index", "Article", new { area = "", id = 12 }, null)</li>
                            <li>@Html.ActionLink("КРЪСТОСЛОВИЦИ", "Index", "Article", new { area = "", id = 13 }, null)</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("ВЕСТНИК(.pdf)", "Index", "Article", new { area = "", id = 14 }, null)</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            ЗА НАС
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("КОИ СМЕ НИЕ", "About", "Home", new { area = "", id = 14 }, null)</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row">
        <div id="navMenu" class="col-md-2">
            @if (User.IsInRole("Admin") || User.IsInRole("Author"))
            {
                <div class="navbar navbar-inverse navbar-left">
                    <ul id="sideBar" class="nav navbar-nav" role="tablist">
                        <li>@Html.ActionLink("Добави публикация", "AddArticle", "Author", new { area = "Author" }, null)</li>
                        <li>@Html.ActionLink("Моите публикации", "GetArticlesForRedaction", "Author", new { area = "Author" }, null)</li>                       
                        @if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                            <li>@Html.ActionLink("За одобрение", "GetAllArticlesForApproval", "Administration", new { area = "Admin" }, null)</li>
                        }
                        <li>@Html.ActionLink("Смяна на парола", "ResetPasswordAdministration", "Account", routeValues: null, htmlAttributes: null)</li>
                    </ul>
                </div>
            }
        </div>
        <div id="innerContent" class="container body-content col-md-8 col-md-offset-1">
            @RenderBody()
            @*<hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>*@
        </div>
    </div>
    
        
    @*</div>*@
</div>
    

<div id="footerContent" class="container-fluid">
    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
